<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="params" label="COM_CATEGORIES_FIELD_BASIC_LABEL">
        <fieldset name="media" label="COM_MAGICGALLERY_FIELD_MEDIA_OPTIONS">
            <field name="resize_image" type="radio" class="btn-group" label="COM_MAGICGALLERY_IMAGE_RESIZE" description="COM_MAGICGALLERY_IMAGE_RESIZE_DESC" filter="int" default="0">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="image_width" type="text" label="COM_MAGICGALLERY_IMAGE_WIDTH" description="COM_MAGICGALLERY_IMAGE_RESIZE_WIDTH_DESC" filter="int" default="600"/>
            <field name="image_height" type="text" label="COM_MAGICGALLERY_IMAGE_HEIGHT" description="COM_MAGICGALLERY_IMAGE_RESIZE_HEIGHT_DESC" filter="int" default="500"/>
            <field name="image_scale" type="list" label="COM_MAGICGALLERY_IMAGE_SCALE_OPTION" description="COM_MAGICGALLERY_SCALE_DESC" default="2" >
                <option value="1">COM_MAGICGALLERY_FILL</option>
                <option value="2">COM_MAGICGALLERY_INSIDE</option>
                <option value="3">COM_MAGICGALLERY_OUTSIDE</option>
                <option value="6">COM_MAGICGALLERY_FIT</option>
            </field>
            <field name="image_quality" type="text" label="COM_MAGICGALLERY_IMAGE_QUALITY" description="COM_MAGICGALLERY_IMAGE_QUALITY_DESC" filter="int" default="80"/>
            <field name="create_thumb" type="radio" class="btn-group" label="COM_MAGICGALLERY_THUMB_CREATE_THUMB" description="COM_MAGICGALLERY_THUMB_CREATE_THUMB_DESC" filter="int" default="1">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="thumb_width" type="text" label="COM_MAGICGALLERY_THUMB_WIDTH" description="COM_MAGICGALLERY_THUMB_RESIZE_WIDTH_DESC" filter="int" default="200"/>
            <field name="thumb_height" type="text" label="COM_MAGICGALLERY_THUMB_HEIGHT" description="COM_MAGICGALLERY_THUMB_RESIZE_HEIGHT_DESC" filter="int" default="200"/>
            <field name="thumb_scale" type="list" label="COM_MAGICGALLERY_THUMB_SCALE_OPTION" description="COM_MAGICGALLERY_SCALE_DESC" default="2" >
                <option value="1">COM_MAGICGALLERY_FILL</option>
                <option value="2">COM_MAGICGALLERY_INSIDE</option>
                <option value="3">COM_MAGICGALLERY_OUTSIDE</option>
                <option value="6">COM_MAGICGALLERY_FIT</option>
            </field>
            <field name="thumb_quality" type="text" label="COM_MAGICGALLERY_THUMB_QUALITY" description="COM_MAGICGALLERY_THUMB_QUALITY_DESC" filter="int" default="80"/>
            <field name="default_item_status" type="radio" class="btn-group" label="COM_MAGICGALLERY_DEFAULT_ITEM_STATUS" description="COM_MAGICGALLERY_CATEGORY_DEFAULT_ITEM_STATUS_DESC" filter="int" default="1">
                <option value="0">JUNPUBLISHED</option>
                <option value="1">JPUBLISHED</option>
            </field>
        </fieldset>
    </fields>
</form>